<h3>
  <div class="text-center">
    <%= controller_name.humanize + ":" %>
    <%= action_name.humanize %>
    <div class="badge badge-info">
    </div>
  </div>
</h3>

<br>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>email</th>
      <th>tenants</th>
      <th>Invited by email</th>
      <th>accepted invite</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.id, user %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.tenants.compact.join(', ') %>
        </td>
         <td>
           <% if user.created_by_invite? %>
           <span class="badge bg-primary">
              <%= user.invitation_sent_at.to_formatted_s(:long) %>
              </span>
            <% else  %>
            <span class="badge bg-info">
              <%= "No"  %>
              </span>
            <% end  %>
        </td>
         <td>
           <% if user.invitation_accepted_at.present? %>
           <span class="badge bg-success">
              <%= user.invitation_accepted_at.to_formatted_s(:long) %>
              </span>
            <% elsif user.invitation_sent_at.present?  %>
              <%= link_to 'Resend', resend_invite_user_path(user), method: :patch, class: "badge bg-info resend" %>
            <% end  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>