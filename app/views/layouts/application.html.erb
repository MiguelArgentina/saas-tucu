    <%= javascript_include_tag "rails-ujs" %>
    
  </head>

  <body>


    <%= render "layouts/header" %>

    <%= render "layouts/flash_messages", :locals => {:flash => flash} %>
    
    

    <div class="container">
      <%= yield %>
    </div>
    
