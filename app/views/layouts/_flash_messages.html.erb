
<% flash.each do |msg_type, message| %>
      <div class="<%= flash_class(msg_type)   %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true"></span>
        </button>
      </div>
<% end %>

