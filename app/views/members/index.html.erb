<%= link_to new_member_path, class: 'nav-link text-black' do %>
            <div class="fas fa-plus-circle text-success"></div>
              New Member</span>
          <% end %>


<br>
<hr>

<%=  form_tag invite_members_path, method: :get do %>
  <%= email_field_tag "email", '', class: 'border border-muted ps-1', :placeholder => 'email@example.com' %>
  <%= submit_tag "Invite tenant", class: 'btn btn-light border border-info' ,data: { confirm: "Send email?" } %>
  <% %>
  <% %>
  <% %>
<% end %>
  


<hr>
<br>

<h3>
  <div class="text-center">
    <%= controller_name.humanize + ":" %>
    <%= action_name.humanize %>
    <div class="badge badge-info">
    </div>
  </div>
</h3>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>user id</th>
      <th>email</th>
      <th>tenants</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
         <td>
          <%= link_to member.user.id, member.user %>
        </td>
        <td>
          <%= member.user %>
        </td>
        <td>
          <%= link_to member.tenant.id, member.tenant %>
        </td>
        <td>
          <%= member.tenant %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
